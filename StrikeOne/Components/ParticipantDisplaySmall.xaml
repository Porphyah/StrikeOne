<UserControl x:Class="StrikeOne.Components.ParticipantDisplaySmall"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrikeOne.Components"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="325">
    <Grid>
        <Ellipse Stroke="DodgerBlue" StrokeThickness="1" HorizontalAlignment="Left" Margin="5,3,0,3" Width="29">
            <Ellipse.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="2" Color="DodgerBlue"/>
            </Ellipse.Effect>
            <Ellipse.Fill>
                <ImageBrush x:Name="AvatorImage" ImageSource="{DynamicResource Icon_empty}"/>
            </Ellipse.Fill>
        </Ellipse>
        <TextBlock x:Name="UserName" FontSize="15" FontWeight="Light" HorizontalAlignment="Left" Margin="45,0,0,0" Foreground="Black" Text="TextBlock" VerticalAlignment="Center"/>
    </Grid>
</UserControl>
