<UserControl x:Class="StrikeOne.Components.Tailor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrikeOne.Components"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Rectangle Stroke="DodgerBlue" Fill="Transparent" StrokeThickness="1" Cursor="SizeAll" MouseDown="StartDrag"/>
        <Ellipse Stroke="DodgerBlue" Fill="White" StrokeThickness="1.5" HorizontalAlignment="Right" Width="8" Height="8" Margin="0,0,-4,-4" 
                 VerticalAlignment="Bottom" Cursor="SizeNWSE" MouseDown="StartSize"/>
    </Grid>
</UserControl>
