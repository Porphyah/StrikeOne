<UserControl x:Class="StrikeOne.Components.SkillItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrikeOne.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="80" 
             MouseDown="OnMouseDown" MouseEnter="OnMouseEnter" MouseLeave="OnMouseLeave">
    <Grid x:Name="Container" Background="#88000000">
        <Grid.RenderTransform>
            <ScaleTransform x:Name="ScaleTransform" CenterX="40" CenterY="50"/>
        </Grid.RenderTransform>
        <Image x:Name="SkillImage" Source="{DynamicResource Skill_white}" Height="60" VerticalAlignment="Top" Margin="10,10,10,0"/>
        <TextBlock x:Name="SkillName" Foreground="White" Text="Skill Name" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"/>
    </Grid>
</UserControl>
