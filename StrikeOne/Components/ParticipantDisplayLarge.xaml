<UserControl x:Class="StrikeOne.Components.ParticipantDisplayLarge"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrikeOne.Components"
             mc:Ignorable="d" 
             d:DesignHeight="130" d:DesignWidth="150">
    <Grid>
        <Ellipse Height="80" VerticalAlignment="Top" Margin="0,10,0,0" HorizontalAlignment="Center" Width="80">
            <Ellipse.Fill>
                <ImageBrush x:Name="AvatorImage" ImageSource="{DynamicResource Icon_empty}"/>
            </Ellipse.Fill>
            <Ellipse.Effect>
                <DropShadowEffect x:Name="ShadowEffect" ShadowDepth="0" BlurRadius="8"/>
            </Ellipse.Effect>
        </Ellipse>
        <TextBlock x:Name="PlayerName" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" 
                   Text="Player Name" Foreground="White" FontWeight="Light" FontSize="20"/>
    </Grid>
</UserControl>
