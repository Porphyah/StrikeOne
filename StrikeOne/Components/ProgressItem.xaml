<UserControl x:Class="StrikeOne.Components.ProgressItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrikeOne.Components"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="530">
    <Grid>
        <TextBlock x:Name="Description" FontSize="15"  HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top"/>
        <Controls:MetroProgressBar x:Name="ProgressBar" Foreground="Orange" Margin="10,0,10,10" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="ProgressText" Foreground="OrangeRed" FontSize="15"  HorizontalAlignment="Right" Margin="0,10,10,0" TextWrapping="Wrap" Text="0.0%" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
