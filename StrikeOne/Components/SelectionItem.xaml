<UserControl x:Class="StrikeOne.Components.SelectionItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StrikeOne.Components"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="80">
    <Grid Background="#88000000">
        <Grid RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <ScaleTransform x:Name="ScaleTransform"/>
            </Grid.RenderTransform>
            <Image x:Name="Image" Margin="15,15,15,35"/>
            <TextBlock x:Name="SelectionText" Foreground="White" TextAlignment="Center" Text="技能名"
                       Margin="10,0,10,10" TextWrapping="Wrap" VerticalAlignment="Bottom"/>
        </Grid>
    </Grid>
</UserControl>
